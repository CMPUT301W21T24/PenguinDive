<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/measurement_geolocation_fragment_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        >

    </TextView>

    <EditText
        android:id="@+id/measurement_geolocation_fragment_double"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insert measurement here"
        android:layout_margin="8dp"
        >

    </EditText>

    <EditText
        android:id="@+id/measurement_geolocation_fragment_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insert geolocation here"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/measurement_geolocation_fragment_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/measurement_geolocation_fragment_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_margin="8dp"/>
    </LinearLayout>



</LinearLayout>