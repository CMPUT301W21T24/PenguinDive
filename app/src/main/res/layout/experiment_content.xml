<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Experiment Title"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/titleText"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Description"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/regionText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="city, country"
        android:textSize="18dp"
        android:layout_below="@id/descriptionText" />

    <TextView
        android:id="@+id/countView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Total trails: "
        android:textSize="18dp"
        android:layout_toRightOf="@id/regionText"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/countText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:layout_toRightOf="@id/countView"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/ownerUserNameView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/regionText"
        android:text="Owner Username: "
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/ownerUserNameText"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@id/regionText"
        android:layout_toRightOf="@id/ownerUserNameView"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/countView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="#EDC994"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Subscribe"/>

</RelativeLayout>