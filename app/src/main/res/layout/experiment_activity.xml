<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/experimentSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:iconifiedByDefault="false"
        android:queryHint="@string/experiment_search_text" />

    <ListView
        android:id="@+id/experimentList"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/experimentSearchBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/myExperimentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_gen"
        android:layout_alignEnd="@+id/profileButton"
        android:layout_marginStart="10dp"
        android:text="@string/my_experiment_button_text" />


    <Button
        android:id="@+id/profileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/add_button"
        android:text="@string/profile_button_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#858A4D"
        app:srcCompat="@android:drawable/ic_input_add" />

    <Button
        android:id="@+id/qr_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/qr_gen"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/experimentList"
        android:text="Scan QR" />

    <Button
        android:id="@+id/qr_gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/experimentList"
        android:layout_marginStart="10dp"
        android:text="Generate QR" />

    <Button
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/experimentList"
        android:layout_toRightOf="@+id/qr_scan"
        android:layout_marginStart="20dp"
        android:text="map"/>

</RelativeLayout>